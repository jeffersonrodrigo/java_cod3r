package controle.exercicios;

import java.util.Scanner;

public class verifiquePar {

	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		
		System.out.println("Digite um valor de 0 a 10 par: ");
		
		int valor = entrada.nextInt();
		
		if(valor >= 0 && valor <= 10 && valor % 2 == 0) {
			System.out.println("O valor: " + valor + " é um numero valido");
		} else {
			System.out.println("é um numero invalido");
		}
		
		entrada.close();
	}
}
